#!/bin/sh

# start spinner in background
spinner="â¡€ â¡„ â¡” â¡œ â  â › â « â¢£ â¢¢ â¢  â¢€"
mkfifo /tmp/spinner
while true; do
    for c in $spinner; do
        echo "ğŸ“¦ $c" >> /tmp/spinner && sleep 0.1
    done
    echo "ğŸ“¦  " >> /tmp/spinner && sleep 0.2
done &
loop=$!

tail -f /tmp/spinner &
spin=$!

aur=$(paru -Qum --devel 2>/dev/null | wc -l)
pacman=$(checkupdates 2>/dev/null | wc -l)
updates=$(( aur + pacman ))

kill $spin
kill $loop

# only show if updates > 0
{ [ $updates -gt 0 ] && echo "ğŸ“¦ $updates"; } || echo
rm /tmp/spinner


[module/weather]
type = custom/script
interval = 60
exec = ~/repos/weather/weather

[module/spotify]
type = custom/ipc
format = <output>
format-underline = ${colors.green}

hook-0 = ~/.bin/spotifyctl polybar
hook-1 = ~/.bin/spotifyctl playpause
hook-2 = ~/.bin/spotifyctl next
hook-3 = ~/.bin/spotifyctl prev

# hooks are 1-based
initial = 1
click-left = polybar-msg -p %pid% hook spotify 2
double-click-left = polybar-msg -p %pid% hook spotify 3
click-right = polybar-msg -p %pid% hook spotify 4

[module/picom]
type = custom/ipc
hook-0 = ~/.bin/polybar-picom
hook-1 = ~/.bin/polybar-picom --toggle
initial = 1
click-left = polybar-msg -p %pid% hook picom 2


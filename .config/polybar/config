[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python /home/jay/repos/polybar-spotify/spotify_status.py -f '{play_pause} {artist}: {song}'
format-underline = ${colors.green}

click-left =        dbus-send --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
double-click-left = dbus-send --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
click-right =       dbus-send --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous


[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%
; format-underline = ${colors.cyan}

exec = pulseaudio-control --icons-volume "🔈 ,🔉 ,🔊 " --icon-muted 🔇 --sink-nickname "alsa_output.pci-0000_00_1f.3.analog-stereo: JBL" --sink-nickname "alsa_output.usb-Native_Instruments_Komplete_Audio_6_5B51A0EC-00.analog-surround-21:蓼KA6" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control next-sink
scroll-up = pulseaudio-control up
scroll-down = pulseaudio-control down
label-padding = 1
label-foreground = ${colors.foreground}


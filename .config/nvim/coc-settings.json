{
    "eslint.autoFixOnSave": true,
    "rust-analyzer.serverPath": "/usr/bin/rust-analyzer",
    "rust-analyzer.diagnostics.disabled": ["unresolved-import"],
    "rust-analyzer.updates.channel": "nightly",
    "yaml.format.enable": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": ["--log-file=/tmp/ccls.log", "-v=1"],
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json"],
            "initializationOptions": {
                "cache": { "directory": "/tmp/ccls" },
                "client": { "snippetSupport" : true },
                "index": { "onChange": true },
                "highlight": { "lsRanges": true }
            }
        }
    },
    "explorer.icon.enableNerdfont": true,
    "explorer.file.showHiddenFiles": true,
    "explorer.previewAction.onHover": true,
    "explorer.width": 30,
    "explorer.contentWidthType": "win-width",
    "explorer.floating.width": 100,
    "explorer.position": "floating",
    "explorer.keyMappings.global": {
        "v": "open:vsplit",
        "mm": "rename",
        "mc": "copyFile",
        "C": "copyFile",
        "md": "delete",
        "D": "delete",
        "ma": "addFile",
        "mA": "addDirectory"
    },
    "explorer.buffer.root.template": "[icon & 1] OPEN BUFFERS",
    "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
    "markdownlint.config": {"MD013": false},
    "java.home": "/usr/lib/jvm/java-15-openjdk"
}
